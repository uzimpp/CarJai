# Build stage
FROM golang:1.24.3-alpine AS builder

# Install git and ca-certificates (needed for go mod download)
RUN apk add --no-cache git ca-certificates

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the main application
RUN CGO_ENABLED=0 GOOS=linux go build -mod=mod -a -installsuffix cgo -o main .

# Build the unified seed binary (builds the scripts package, seed.go is the main entry point)
RUN CGO_ENABLED=0 GOOS=linux go build -mod=mod -a -installsuffix cgo -o seed ./scripts/

# Final stage
FROM alpine:latest

# Install runtime deps for both units:
# - ca-certificates: HTTPS
# - poppler-utils: pdftotext for PDF extraction
# - chromium + fonts + nss: headless browser for scraping
# - wget: for health checks
RUN apk update && \
    apk add --no-cache \
    ca-certificates \
    poppler-utils \
    chromium nss freetype harfbuzz ttf-freefont \
    wget && \
    rm -rf /var/cache/apk/*

# Tell chromedp where Chromium is
ENV CHROME_BIN=/usr/bin/chromium

WORKDIR /app/

# Copy the main binary from builder stage
COPY --from=builder /app/main .

# Copy the unified seed binary
COPY --from=builder /app/seed ./scripts/

# Copy helper script
COPY scripts/seed.sh ./scripts/

# Note: price2568.pdf is mounted as a volume in docker-compose.yml, not copied here

# Expose port (adjust as needed)
EXPOSE 8080

# Run the application
CMD ["./main"]
