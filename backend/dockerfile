# Build stage
FROM golang:1.24.3-alpine AS builder

# Install git and ca-certificates (needed for go mod download)
RUN apk add --no-cache git ca-certificates

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the main application
RUN CGO_ENABLED=0 GOOS=linux go build -mod=mod -a -installsuffix cgo -o main .

# Build the seed script binary
RUN CGO_ENABLED=0 GOOS=linux go build -mod=mod -a -installsuffix cgo -o seed_demo_cars ./scripts/seed_demo_cars.go

# Final stage
FROM alpine:latest

# Install runtime deps for both units:
# - ca-certificates: HTTPS
# - poppler-utils: pdftotext for PDF extraction
# - chromium + fonts + nss: headless browser for scraping
RUN apk update && \
    apk add --no-cache \
    ca-certificates \
    poppler-utils \
    chromium nss freetype harfbuzz ttf-freefont && \
    rm -rf /var/cache/apk/*

# Tell chromedp where Chromium is
ENV CHROME_BIN=/usr/bin/chromium

WORKDIR /app/

# Copy the main binary from builder stage
COPY --from=builder /app/main .

# Copy the seed script binary
COPY --from=builder /app/seed_demo_cars ./scripts/

# Copy scripts directory (for reference and helpers)
COPY scripts/seed_demo_cars_docker.sh ./scripts/

# Expose port (adjust as needed)
EXPOSE 8080

# Run the application
CMD ["./main"]
