# SERVER CONFIGURATION
# =============================================================================
PORT=8080
ENVIRONMENT=development

# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection settings
DB_HOST=database
DB_PORT=5432
DB_USER=carjai_user
DB_PASSWORD=carjai_password
DB_NAME=carjai
DB_SSLMODE=disable

# Docker PostgreSQL password (for docker-compose)
POSTGRES_PASSWORD=your_postgres_password_here


# AUTHENTICATION & SECURITY
# =============================================================================
# JWT token configuration
JWT_SECRET=your_very_long_jwt_secret_key_at_least_32_characters_long_for_carjai_development
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=carjai-api

# Admin account credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_NAME=System Administrator
ADMIN_ROUTE_PREFIX=/myadmin

# IP whitelist for admin access (comma-separated)
ADMIN_IP_WHITELIST=127.0.0.1/32,::1/128,172.18.0.0/16

# CORS CONFIGURATION
# =============================================================================
# Allowed origins for cross-origin requests (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# EXTERNAL SERVICES
# =============================================================================
# Frontend API URL (used for internal communication)
NEXT_PUBLIC_API_URL=http://localhost:8080
